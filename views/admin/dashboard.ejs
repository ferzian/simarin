<!DOCTYPE html>
<html>
  <head>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <title>Dashboard Admin SIMARIN</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <link rel="icon" sizes="32x32" type="image/png" href="/images/logo.png" />
    <link rel="stylesheet" href="/css/admin.css" />
    <script src="/js/admin/index.js" defer></script>
  </head>
  <body class="bg-gray-100 flex h-screen">
    <aside
      class="sidebar bg-gray-800 text-white w-64 p-5 space-y-6 flex-shrink-0"
      id="sidebar"
    >
      <div class="flex justify-between items-center mb-6 px-2 relative">
        <img
          src="/images/logo.png"
          alt="Logo SIMARIN"
          class="h-10 w-10 object-contain"
        />
        <h2
          class="text-2xl font-bold transition-all duration-300"
          id="sidebarTitle"
        >
          SIMARIN
        </h2>
        <button
          id="sidebarTitleButton"
          class="hidden absolute top-0 left-0 w-full h-full justify-center items-center text-lg font-bold text-white bg-gray-800 rounded-lg"
        >
          ADM
        </button>
        <button
          id="sidebarToggle"
          class="p-1 rounded-full hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-gray-600 z-10"
        >
          <svg
            class="w-6 h-6 text-white"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M11 19l-7-7 7-7m8 14l-7-7 7-7"
            ></path>
          </svg>
        </button>
      </div>
      <nav class="flex-1 space-y-4 text-lg mt-8">
        <div>
          <h3 class="uppercase text-gray-500 text-sm mb-2 menu-text-wrapper">
            Core
          </h3>
          <a
            href="/admin/dashboard"
            class="menu-item-link text-white hover:text-white relative bg-gray-700"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-6 w-6 menu-icon"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              stroke-width="2"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"
              />
            </svg>
            <span class="menu-text-wrapper">Dashboard</span>
          </a>
        </div>
        <div>
          <h3 class="uppercase text-gray-500 text-sm mb-2 menu-text-wrapper">
            Participant Management
          </h3>
          <a
            href="/admin/data-peserta"
            class="menu-item-link text-white hover:text-white"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="16"
              height="16"
              fill="currentColor"
              class="bi bi-people size-6 menu-icon"
              viewBox="0 0 16 16"
            >
              <path
                d="M15 14s1 0 1-1-1-4-5-4-5 3-5 4 1 1 1 1zm-7.978-1L7 12.996c.001-.264.167-1.03.76-1.72C8.312 10.629 9.282 10 11 10c1.717 0 2.687.63 3.24 1.276.593.69.758 1.457.76 1.72l-.008.002-.014.002zM11 7a2 2 0 1 0 0-4 2 2 0 0 0 0 4m3-2a3 3 0 1 1-6 0 3 3 0 0 1 6 0M6.936 9.28a6 6 0 0 0-1.23-.247A7 7 0 0 0 5 9c-4 0-5 3-5 4q0 1 1 1h4.216A2.24 2.24 0 0 1 5 13c0-1.01.377-2.042 1.09-2.904.243-.294.526-.569.846-.816M4.92 10A5.5 5.5 0 0 0 4 13H1c0-.26.164-1.03.76-1.724.545-.636 1.492-1.256 3.16-1.275ZM1.5 5.5a3 3 0 1 1 6 0 3 3 0 0 1-6 0m3-2a2 2 0 1 0 0 4 2 2 0 0 0 0-4"
              />
            </svg>
            <span class="menu-text-wrapper">Data Peserta</span>
          </a>
          <a
            href="/admin/laporan"
            class="menu-item-link text-white hover:text-white"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="16"
              height="16"
              fill="currentColor"
              class="bi bi-person-check size-6 menu-icon"
              viewBox="0 0 16 16"
            >
              <path
                d="M12.5 16a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7m1.679-4.493-1.335 2.226a.75.75 0 0 1-1.174.144l-.774-.773a.5.5 0 0 1 .708-.708l.547.548 1.17-1.951a.5.5 0 1 1 .858.514M11 5a3 3 0 1 1-6 0 3 3 0 0 1 6 0M8 7a2 2 0 1 0 0-4 2 2 0 0 0 0 4"
              />
              <path
                d="M8.256 14a4.5 4.5 0 0 1-.229-1.004H3c.001-.246.154-.986.832-1.664C4.484 10.68 5.711 10 8 10q.39 0 .74.025c.226-.341.496-.65.804-.918Q8.844 9.002 8 9c-5 0-6 3-6 4s1 1 1 1z"
              />
            </svg>
            <span class="menu-text-wrapper">Approval Laporan</span>
          </a>
        </div>
        <div>
          <h3
            class="uppercase text-gray-500 text-sm mt-6 mb-2 menu-text-wrapper"
          >
            Recap Data
          </h3>
          <a
            href="/admin/peserta"
            class="menu-item-link text-white hover:text-white"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              class="size-6 menu-icon"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M9 12h3.75M9 15h3.75M9 18h3.75m3 .75H18a2.25 2.25 0 0 0 2.25-2.25V6.108c0-1.135-.845-2.098-1.976-2.192a48.424 48.424 0 0 0-1.123-.08m-5.801 0c-.065.21-.1.433-.1.664 0 .414.336.75.75.75h4.5a.75.75 0 0 0 .75-.75 2.25 2.25 0 0 0-.1-.664m-5.8 0A2.251 2.251 0 0 1 13.5 2.25H15c1.012 0 1.867.668 2.15 1.586m-5.8 0c-.376.023-.75.05-1.124.08C9.095 4.01 8.25 4.973 8.25 6.108V8.25m0 0H4.875c-.621 0-1.125.504-1.125 1.125v11.25c0 .621.504 1.125 1.125 1.125h9.75c.621 0 1.125-.504 1.125-1.125V9.375c0-.621-.504-1.125-1.125-1.125H8.25ZM6.75 12h.008v.008H6.75V12Zm0 3h.008v.008H6.75V15Zm0 3h.008v.008H6.75V18Z"
              />
            </svg>

            <span class="menu-text-wrapper">Statistik Peserta</span>
          </a>
          <a
            href="/admin/kunjungan"
            class="menu-item-link text-white hover:text-white"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="16"
              height="16"
              fill="currentColor"
              class="bi bi-bar-chart-line size-6 menu-icon"
              viewBox="0 0 16 16"
            >
              <path
                d="M11 2a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v12h.5a.5.5 0 0 1 0 1H.5a.5.5 0 0 1 0-1H1v-3a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v3h1V7a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v7h1zm1 12h2V2h-2zm-3 0V7H7v7zm-5 0v-3H2v3z"
              />
            </svg>
            <span class="menu-text-wrapper">Statistik Kunjungan</span>
          </a>
        </div>
      </nav>
    </aside>

    <div class="flex-1 flex flex-col overflow-hidden">
      <header
        class="bg-white shadow-md px-6 py-4 flex justify-between items-center border-b border-gray-200"
      >
        <div>
          <h1 class="text-2xl font-bold text-gray-800">Dashboard Admin</h1>
          <p class="text-sm text-gray-500">
            Balai Riset Perikanan Budidaya Air Tawar dan Penyuluhan Perikanan
          </p>
        </div>

        <div class="flex items-center gap-6 relative">
          <div class="relative">
            <button
              id="notifDropdownButton"
              class="relative p-2 rounded-full hover:bg-gray-100 transition duration-200"
              onclick="toggleNotifDropdown()"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-7 w-7 text-gray-700"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
                stroke-width="2"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C8.67 6.165 8 7.388 8 8.75v5.408c0 .538-.214 1.055-.595 1.437L6 17h5"
                />
              </svg>

              <% if (pendingCount > 0) { %>
              <span
                class="absolute top-1 right-1 bg-red-600 text-white text-xs font-bold px-1.5 py-0.5 rounded-full"
              >
                <%= pendingCount %>
              </span>
              <% } %>
            </button>

            <div
              id="notifDropdownMenu"
              class="hidden absolute right-0 mt-2 w-72 bg-white rounded-lg shadow-xl border border-gray-200 z-50 overflow-hidden"
            >
              <div
                class="px-5 py-3 border-b border-gray-200 font-semibold text-gray-800"
              >
                Notifikasi
              </div>

              <% if (pendingCount > 0) { %>
              <a
                href="/admin/laporan"
                class="block px-5 py-3 hover:bg-gray-50 transition-colors duration-200"
              >
                <div class="flex items-center">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-5 w-5 text-blue-500 mr-3"
                    viewBox="0 0 20 20"
                    fill="currentColor"
                  >
                    <path
                      d="M10 2a8 8 0 100 16 8 8 0 000-16zM8.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4a1 1 0 00-1.414-1.414L10 10.586 8.707 9.293z"
                    />
                  </svg>
                  <div class="text-sm text-gray-800">
                    Ada
                    <span class="font-bold text-blue-600"
                      ><%= pendingCount %></span
                    >
                    laporan yang perlu di-approve.
                  </div>
                </div>
              </a>
              <% } else { %>
              <div class="px-5 py-4 text-center text-gray-500">
                Tidak ada notifikasi baru
              </div>
              <% } %>
            </div>
          </div>

          <div class="relative">
            <button
              id="dropdownUserButton"
              class="flex items-center gap-2 text-gray-700 hover:text-gray-900 focus:outline-none p-2 rounded-full hover:bg-gray-100 transition-colors duration-200"
            >
              <span class="font-semibold text-lg"
                ><%= user ? user.username : 'admin' %></span
              >
              <svg
                class="w-5 h-5"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M19 9l-7 7-7-7"
                ></path>
              </svg>
            </button>

            <div
              id="dropdownUserMenu"
              class="hidden absolute right-0 mt-2 w-48 bg-white rounded-lg shadow-xl border border-gray-200 z-50 overflow-hidden"
            >
              <div class="px-4 py-3 text-gray-600 text-sm font-medium">
                Administrator
              </div>
              <div class="border-t my-1"></div>
              <form action="/auth/logout" method="POST">
                <button
                  class="block w-full text-left px-4 py-2 text-red-600 hover:bg-red-50 hover:text-red-700 font-semibold transition duration-150"
                >
                  <div class="flex items-center gap-2">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      class="h-5 w-5"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke="currentColor"
                      stroke-width="2"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"
                      />
                    </svg>
                    <span>Logout</span>
                  </div>
                </button>
              </form>
            </div>
          </div>
        </div>
      </header>

      <main class="flex-1 overflow-x-hidden overflow-y-auto bg-gray-100 p-8">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mt-6">
          <div
            class="bg-white rounded-lg shadow-md p-6 flex items-center justify-between transition-all duration-300 transform hover:-translate-y-1 hover:shadow-lg border-l-4 border-green-500"
          >
            <div>
              <h2 class="text-lg text-gray-600 font-semibold mb-1">
                Total Kunjungan (Bulan Ini)
              </h2>
              <p class="text-4xl font-bold text-green-600">
                <%= visitCount %>
                <span class="text-xl font-normal text-gray-400">orang</span>
              </p>
            </div>
            <div
              class="flex items-center justify-center bg-green-100 text-green-600 rounded-full w-14 h-14"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="size-8"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M2.036 12.322a1.012 1.012 0 0 1 0-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178Z"
                />
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z"
                />
              </svg>
            </div>
          </div>

          <div
            class="bg-white rounded-lg shadow-md p-6 flex items-center justify-between transition-all duration-300 transform hover:-translate-y-1 hover:shadow-lg border-l-4 border-blue-500"
          >
            <div>
              <h2 class="text-lg text-gray-600 font-semibold mb-1">
                Peserta Aktif (Saat Ini)
              </h2>
              <p class="text-4xl font-bold text-blue-600">
                <%= aktifCount %>
                <span class="text-xl font-normal text-gray-400">orang</span>
              </p>
            </div>
            <div
              class="flex items-center justify-center bg-blue-100 text-blue-600 rounded-full w-14 h-14"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-8 w-8"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
                stroke-width="1.5"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"
                />
              </svg>
            </div>
          </div>

          <div
            class="bg-white rounded-lg shadow-md p-6 flex items-center justify-between transition-all duration-300 transform hover:-translate-y-1 hover:shadow-lg border-l-4 border-purple-500"
          >
            <div>
              <h2 class="text-lg text-gray-600 font-semibold mb-1">
                Pendaftar Baru (Bulan Ini)
              </h2>
              <p class="text-4xl font-bold text-purple-600">
                <%= newRegistrantsCount %>
                <span class="text-xl font-normal text-gray-400">orang</span>
              </p>
            </div>
            <div
              class="flex items-center justify-center bg-purple-100 text-purple-600 rounded-full w-14 h-14"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="size-8"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M18 7.5v3m0 0v3m0-3h3m-3 0h-3m-2.25-4.125a3.375 3.375 0 1 1-6.75 0 3.375 3.375 0 0 1 6.75 0ZM3 19.235v-.11a6.375 6.375 0 0 1 12.75 0v.109A12.318 12.318 0 0 1 9.374 21c-2.331 0-4.512-.645-6.374-1.766Z"
                />
              </svg>
            </div>
          </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mt-6">
          <div class="bg-white rounded-lg shadow-md p-6 h-96 pb-14">
            <h2 class="text-xl font-semibold mb-4 text-gray-700">
              Peserta Aktif per Lokasi
            </h2>
            <canvas id="lokasiChart" class="h-80"></canvas>
          </div>
          <div class="bg-white rounded-lg shadow-md p-6">
            <h2 class="text-xl font-semibold mb-4 text-gray-700">
              Kegiatan Terdekat yang Akan Selesai
            </h2>
            <% if (upcomingEndDate.length > 0) { %>
            <div class="overflow-x-auto">
              <table class="w-full text-sm">
                <thead>
                  <tr class="border-b bg-gray-50">
                    <th class="py-3 px-4 text-left font-medium text-gray-600">
                      Nama
                    </th>
                    <th class="py-3 px-4 text-left font-medium text-gray-600">
                      Lokasi
                    </th>
                    <th class="py-3 px-4 text-left font-medium text-gray-600">
                      Tanggal Selesai
                    </th>
                  </tr>
                </thead>
                <tbody>
                  <% upcomingEndDate.forEach(p => { %>
                  <tr class="border-b hover:bg-gray-50 transition-colors">
                    <td class="py-3 px-4 text-gray-800"><%= p.nama %></td>
                    <td class="py-3 px-4 text-gray-800"><%= p.lokasi %></td>
                    <td class="py-3 px-4 text-gray-800">
                      <%= moment(p.tanggalSelesai).format('DD MMM YYYY') %>
                    </td>
                  </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
            <% } else { %>
            <p class="text-gray-500">
              Tidak ada kegiatan yang akan selesai dalam 7 hari ke depan.
            </p>
            <% } %>
          </div>
        </div>
      </main>
    </div>
    <script>
      const lokasiLabels = ['Sempur', 'Depok', 'Cibalagung', 'Cijeruk'];
      const lokasiCounts = [
        <%= lokasiData.Sempur %>,
        <%= lokasiData.Depok %>,
        <%= lokasiData.Cibalagung %>,
        <%= lokasiData.Cijeruk %>
      ];

      new Chart(document.getElementById('lokasiChart'), {
        type: 'bar',
        data: {
          labels: lokasiLabels,
          datasets: [{
            label: 'Jumlah Peserta',
            data: lokasiCounts,
            backgroundColor: [
              'rgba(16, 185, 129, 0.8)',
              'rgba(59, 130, 246, 0.8)',
              'rgba(139, 92, 246, 0.8)',
              'rgba(245, 158, 11, 0.8)'
            ]
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
            legend: {
              display: false,
            },
            tooltip: {
              backgroundColor: 'rgba(0, 0, 0, 0.7)',
              bodyFont: {
                size: 14
              }
            }
          },
          scales: {
            y: {
              beginAtZero: true,
              grid: {
                color: 'rgba(200, 200, 200, 0.2)' // Garis grid horizontal yang lebih halus
              },
              ticks: {
                precision: 0,
                font: {
                  size: 12
                }
              }
            },
            x: {
              grid: {
                display: false
              },
              ticks: {
                font: {
                  size: 12
                }
              }
            }
          }
        }
      });
    </script>
  </body>
</html>
