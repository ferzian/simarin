    <div class="flex-1 flex flex-col overflow-hidden">
      <header
        class="bg-white shadow-md px-6 py-4 flex justify-between items-center border-b border-gray-200"
      >
        <div>
          <h1 class="text-2xl font-bold text-gray-800">Data Peserta</h1>
          <p class="text-sm text-gray-500">
            Balai Riset Perikanan Budidaya Air Tawar dan Penyuluhan Perikanan
          </p>
        </div>
        <!-- Kanan -->
        <% var safePendingCount = pendingCount || 0; var safeLaporanCount =
        laporanCount || 0; var totalNotif = safePendingCount + safeLaporanCount;
        %>
        <div class="flex items-center gap-6">
          <!-- Notifikasi -->
          <div class="relative">
            <button
              id="notifDropdownButton"
              class="relative p-2 rounded-lg hover:bg-gray-100 transition"
              onclick="toggleNotifDropdown()"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-7 w-7 text-gray-700"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
                stroke-width="2"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C8.67 6.165 8 7.388 8 8.75v5.408c0 .538-.214 1.055-.595 1.437L6 17h5"
                />
              </svg>

              <% if (totalNotif > 0) { %>
              <span
                class="absolute -top-1 -right-1 bg-red-600 text-white text-xs font-bold px-1.5 py-0.5 rounded-full"
              >
                <%= totalNotif %>
              </span>
              <% } %>
            </button>

            <!-- Dropdown Notifikasi -->
            <div
              id="notifDropdownMenu"
              class="hidden absolute right-0 mt-2 w-72 bg-white rounded-lg shadow-xl border border-gray-200 z-50 overflow-hidden"
            >
              <div
                class="px-5 py-3 border-b border-gray-200 font-semibold text-gray-800"
              >
                Notifikasi
              </div>

              <% if (safePendingCount > 0 || safeLaporanCount > 0) { %> <% if
              (safePendingCount > 0) { %>
              <a
                href="/admin/surat-pengajuan"
                class="block px-5 py-3 hover:bg-gray-50 transition"
              >
                📄 Ada
                <span class="font-bold text-blue-600"
                  ><%= safePendingCount %></span
                >
                surat permohonan yang menunggu approval.
              </a>
              <% } %> <% if (safeLaporanCount > 0) { %>
              <a
                href="/admin/laporan"
                class="block px-5 py-3 hover:bg-gray-50 transition"
              >
                📊 Ada
                <span class="font-bold text-green-600"
                  ><%= safeLaporanCount %></span
                >
                laporan baru yang belum diperiksa.
              </a>
              <% } %> <% } else { %>
              <div class="px-5 py-4 text-center text-gray-500">
                Tidak ada notifikasi baru
              </div>
              <% } %>
            </div>
          </div>

          <!-- Profil -->
          <div class="relative">
            <button
              id="dropdownUserButton"
              class="flex items-center gap-2 text-gray-700 hover:text-gray-900 focus:outline-none p-2 rounded-lg hover:bg-gray-100 transition"
            >
              <span class="font-semibold text-lg">
                <%= user ? user.username : 'admin' %>
              </span>
              <svg
                class="w-5 h-5"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M19 9l-7 7-7-7"
                ></path>
              </svg>
            </button>

            <div
              id="dropdownUserMenu"
              class="hidden absolute right-0 mt-2 w-48 bg-white rounded-lg shadow-xl border border-gray-200 z-50 overflow-hidden"
            >
              <div class="px-4 py-3 text-gray-600 text-sm font-medium">
                Administrator
              </div>
              <div class="border-t my-1"></div>
              <form action="/auth/logout" method="POST">
                <button
                  class="block w-full text-left px-4 py-2 text-red-600 hover:bg-red-50 hover:text-red-700 font-semibold transition duration-150"
                >
                  <div class="flex items-center gap-2">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      class="h-5 w-5"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke="currentColor"
                      stroke-width="2"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"
                      />
                    </svg>
                    <span>Logout</span>
                  </div>
                </button>
              </form>
            </div>
          </div>
        </div>
      </header>

      <main class="flex-1 overflow-x-hidden overflow-y-auto bg-gray-100 p-8">
        <h2 class="text-3xl font-bold mb-6 text-gray-800">
          Informasi Data Peserta
        </h2>
        <div class="bg-white p-8 rounded-2xl shadow-xl border border-gray-200">
          <div
            class="flex flex-col md:flex-row md:items-center md:justify-between gap-4 mb-6"
          >
            <h3 class="text-3xl font-extrabold text-gray-900">
              Daftar Lengkap Peserta
            </h3>
          </div>

          <div class="flex items-center mb-2 rounded-lg">
            <div class="flex flex-col mr-2">
              <label
                for="filterDateStart"
                class="text-gray-700 font-medium mb-1"
                >Dari:</label
              >
              <input
                type="date"
                id="filterDateStart"
                class="border-2 border-gray-300 rounded-lg px-3 py-2 text-gray-800 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 cursor-pointer w-full"
              />
            </div>

            <div class="flex flex-col mr-2">
              <label for="filterDateEnd" class="text-gray-700 font-medium mb-1"
                >Sampai:</label
              >
              <input
                type="date"
                id="filterDateEnd"
                class="border-2 border-gray-300 rounded-lg px-3 py-2 text-gray-800 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 cursor-pointer w-full"
              />
            </div>

            <div class="w-full md:w-auto mt-auto">
              <button
                id="applyFilterBtn"
                class="bg-blue-600 text-white px-6 py-2 rounded-lg shadow-md hover:bg-blue-700 transition duration-300 font-semibold w-full mb-1"
              >
                Terapkan
              </button>
            </div>
          </div>

          <div class="flex flex-col sm:flex-row gap-4 w-full">
            <div class="relative w-full">
              <div
                class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="size-6 text-gray-400 mb-2"
                  viewBox="0 0 20 20"
                  fill="currentColor"
                >
                  <path
                    fill-rule="evenodd"
                    d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z"
                    clip-rule="evenodd"
                  />
                </svg>
              </div>
              <input
                type="text"
                id="searchTable"
                placeholder="Cari nama, nomor induk, instansi, kegiatan atau lokasi..."
                class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-xl focus:ring-blue-500 focus:border-blue-500 text-gray-800 transition-all duration-200"
              />
            </div>
            <button
              id="downloadExcelBtn"
              class="bg-green-600 text-white px-5 py-2 rounded-xl shadow-md hover:bg-green-700 transition duration-300 font-bold flex items-center justify-center gap-2 text-sm md:text-base flex-shrink-0 mb-3 inline-flex"
            >
              Unduh Excel
            </button>
          </div>

          <div
            class="overflow-x-auto rounded-xl border border-gray-200 shadow-md"
          >
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-blue-900">
                <tr class="text-white uppercase tracking-wider">
                  <th class="px-4 py-3 font-semibold">Foto</th>
                  <th
                    class="px-3 py-3 cursor-pointer select-none font-semibold"
                    data-sort="nama"
                  >
                    <div class="flex items-center gap-1">
                      Nama <span class="sort-indicator text-blue-200">⇅</span>
                    </div>
                  </th>
                  <th
                    class="px-3 py-3 cursor-pointer select-none font-semibold text-left"
                    data-sort="nisNpm"
                  >
                    <div class="flex items-center gap-1 justify-start">
                      Nomor Induk Siswa/Mahasiswa
                      <span class="sort-indicator text-blue-200">⇅</span>
                    </div>
                  </th>
                  <th
                    class="px-3 py-3 cursor-pointer select-none font-semibold text-left"
                    data-sort="instansi"
                  >
                    <div class="flex items-center gap-1">
                      Instansi
                      <span class="sort-indicator text-blue-200">⇅</span>
                    </div>
                  </th>
                  <th
                    class="px-3 py-3 cursor-pointer select-none font-semibold text-left"
                    data-sort="kegiatan"
                  >
                    <div class="flex items-center gap-1">
                      Kegiatan
                      <span class="sort-indicator text-blue-200">⇅</span>
                    </div>
                  </th>
                  <th
                    class="px-3 py-3 cursor-pointer select-none min-w-[120px] whitespace-nowrap font-semibold text-left"
                    data-sort="lokasi"
                  >
                    <div class="flex items-center gap-1">
                      Lokasi
                      <span class="sort-indicator text-blue-200">⇅</span>
                    </div>
                  </th>
                  <th
                    class="px-3 py-3 cursor-pointer select-none min-w-[120px] whitespace-nowrap font-semibold text-left"
                    data-sort="statusSelesai"
                  >
                    <div class="flex items-center gap-1">
                      Status <span class="sort-indicator text-blue-200">⇅</span>
                    </div>
                  </th>
                  <th class="px-3 py-3 font-semibold text-left">Aksi</th>
                </tr>
              </thead>
              <tbody
                class="bg-white divide-y divide-gray-100"
                id="participantsTableBody"
              ></tbody>
            </table>
          </div>

          <div
            id="detailModal"
            class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 p-4"
          >
            <div
              class="bg-white rounded-2xl shadow-xl w-full max-w-4xl max-h-[90vh] flex flex-col transform transition-transform duration-300 scale-95"
            >
              <div
                class="flex items-center justify-between p-6 border-b border-gray-200 sticky top-0 bg-white rounded-t-2xl z-10"
              >
                <h2 class="text-3xl font-extrabold text-gray-900">
                  Detail Peserta
                </h2>
                <button
                  id="closeModalBtn"
                  class="text-gray-400 hover:text-gray-700 transition-colors duration-200 p-2 rounded-full hover:bg-gray-100"
                >
