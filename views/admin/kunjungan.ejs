    <script>
                        // === ambil data dari server ===
                        const visitorsData = <%- JSON.stringify(visitors) %>;

                        // --- Group data pakai key YYYY-MM ---
                        const grouped = {};
                        visitorsData.forEach(v => {
                          const date = new Date(v.createdAt);
                          if (!isNaN(date)) {
                            const key = `${date.getFullYear()}-${String(date.getMonth() + 1).padStart(2, "0")}`;
                            grouped[key] = (grouped[key] || 0) + 1;
                          }
                        });

                        // simpan key & label chart
                        const keys = Object.keys(grouped).sort();
                        const labels = keys.map(key => {
                          const [y, m] = key.split("-");
                          return new Date(y, m - 1).toLocaleString("id-ID", { month: "long", year: "numeric" });
                        });
                        const data = Object.values(grouped);

                        // --- render chart ---
                        const ctx = document.getElementById("visitorChart").getContext("2d");
                        const lastIndex = data.length - 1;

      const visitorChart = new Chart(ctx, {
        type: "line",
        data: {
          labels,
          datasets: [
            {
              label: "Jumlah Kunjungan",
              data,
              borderColor: "#f59e0b",
              backgroundColor: "rgba(245,158,11,0.2)",
              fill: true,
              tension: 0.3,
              borderWidth: 3,
              pointRadius: 5,
              pointBackgroundColor: "#f59e0b",
              pointHoverRadius: 7,
              pointHoverBackgroundColor: "#d97706",
            },
            {
              label: "Titik Terakhir",
              data: labels.map((_, i) => (i === lastIndex ? data[i] : null)),
              borderColor: "transparent",   // ga ada garis
              backgroundColor: "#ef4444",   // merah untuk titik terakhir
              pointRadius: 8,
              pointHoverRadius: 10,
              type: "line",                 // tetap line tapi cuma 1 titik
            }
          ]
        },
        options: {
          responsive: true,
          plugins: {
            legend: { display: false },
            tooltip: {
              callbacks: {
                label: (ctx) => ` ${ctx.formattedValue} kunjungan`
              }
            }
          },
          scales: {
            x: {
              grid: { display: true, drawOnChartArea: false },
            },
            y: {
              beginAtZero: true,
              grid: { color: "rgba(0,0,0,0.05)" },
              ticks: { stepSize: 5 }
            }
          }
        }
      });



                        // update ringkasan total
                        document.getElementById("totalVisitors").innerText = visitorsData.length;

                        // --- ambil bulan & tahun saat ini ---
                        const now = new Date();
                        const thisMonthKey = `${now.getFullYear()}-${String(now.getMonth() + 1).padStart(2, "0")}`;
                        const thisMonthLabel = now.toLocaleString("id-ID", { month: "long", year: "numeric" });

                        // cari index bulan sekarang di chart
                        const currentIndex = keys.indexOf(thisMonthKey);

                        // nilai bulan ini
                        const currentValue = currentIndex !== -1 ? data[currentIndex] : 0;

                        // nilai bulan lalu
                        const prevMonthValue = currentIndex > 0 ? data[currentIndex - 1] : 0;

                        // nilai tahun lalu (bulan sama, tahun beda)
                        const prevYearKey = `${now.getFullYear() - 1}-${String(now.getMonth() + 1).padStart(2, "0")}`;
                        const prevYearIndex = keys.indexOf(prevYearKey);
                        const prevYearValue = prevYearIndex !== -1 ? data[prevYearIndex] : 0;

                        // hitung persentase perubahan
                        const calcChange = (curr, prev) => {
                          if (!prev || prev === 0) return "0%";
                          const change = ((curr - prev) / prev) * 100;
                          return `${change.toFixed(1)}%`;
                        };

                        // update DOM
                        document.getElementById("changePrevMonth").innerText = calcChange(currentValue, prevMonthValue);
                        document.getElementById("changePrevYear").innerText = calcChange(currentValue, prevYearValue);

                        // === FILTER HANDLER ===
                  document.getElementById("filterForm").addEventListener("submit", (e) => {
                    e.preventDefault();
                    const from = document.getElementById("fromDate").value; // YYYY-MM
                    const to = document.getElementById("toDate").value;     // YYYY-MM

                    // filter berdasarkan key
                    const filteredKeys = keys.filter(k => {
                      return (!from || k >= from) && (!to || k <= to);
                    });

                    const filteredLabels = filteredKeys.map(key => {
                      const [y, m] = key.split("-");
                      return new Date(y, m - 1).toLocaleString("id-ID", { month: "long", year: "numeric" });
                    });
                    const filteredData = filteredKeys.map(k => grouped[k]);

                    // update chart
                    visitorChart.data.labels = filteredLabels;
                    visitorChart.data.datasets[0].data = filteredData;
                    visitorChart.update();

                    // --- update ringkasan berdasarkan filter ---
                    const total = filteredData.reduce((a, b) => a + b, 0);
                    document.getElementById("totalVisitors").innerText = total;

                    // kalau range kosong, kosongkan perubahan
                    if (filteredKeys.length === 0) {
                      document.getElementById("changePrevMonth").innerText = "-";
                      document.getElementById("changePrevYear").innerText = "-";
                      return;
                    }

                    // ambil bulan terakhir dalam filter (anggap current month)
                    const currentIndex = filteredKeys.length - 1;
                    const currentValue = filteredData[currentIndex];

                    // bulan sebelumnya
                    const prevMonthValue = currentIndex > 0 ? filteredData[currentIndex - 1] : 0;

                    // cari tahun lalu (bulan sama, tahun beda) dalam filter
                    const [currYear, currMonth] = filteredKeys[currentIndex].split("-");
                    const prevYearKey = `${parseInt(currYear) - 1}-${currMonth}`;
                    const prevYearIndex = filteredKeys.indexOf(prevYearKey);
                    const prevYearValue = prevYearIndex !== -1 ? filteredData[prevYearIndex] : 0;

                    const calcChange = (curr, prev) => {
                      if (!prev || prev === 0) return "0%";
                      const change = ((curr - prev) / prev) * 100;
                      return `${change.toFixed(1)}%`;
                    };

                    document.getElementById("changePrevMonth").innerText = calcChange(currentValue, prevMonthValue);
                    document.getElementById("changePrevYear").innerText = calcChange(currentValue, prevYearValue);
                  });
    </script>
