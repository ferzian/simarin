<!DOCTYPE html>
<html>
  <head>
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Admin Dashboard</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <style>
      body {
        font-family: "Poppins", sans-serif;
      }
      /* Transisi untuk sidebar */
      .sidebar {
        transition: width 0.3s ease-in-out;
      }
    </style>
  </head>
  <body class="bg-gray-100 flex h-screen">
    <aside
      class="sidebar bg-gray-800 text-white w-64 p-5 space-y-6 flex-shrink-0 overflow-hidden"
      id="sidebar"
    >
      <div class="flex justify-between items-center mb-6">
        <h2 class="text-2xl font-bold">SIMARIN</h2>
        <button id="sidebarToggle" class="text-gray-800 focus:outline-none">
          <svg
            class="w-6 h-6"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"
            ></path>
          </svg>
        </button>
      </div>
      <nav class="flex-1 p-4 space-y-4 text-lg">
        <div>
          <h3 class="uppercase text-gray-500 text-sm mb-1 menu-text">Core</h3>
          <a
            href="/auth/admin/dashboard"
            class="flex items-center gap-3 px-4 py-2 rounded hover:bg-gray-700 transition"
          >
            <span class="menu-text">Dashboard</span>
          </a>
        </div>
        <div>
          <h3 class="uppercase text-gray-500 text-sm mt-6 mb-1 menu-text">
            User
          </h3>
          <a
            href="/auth/admin/approval-akun"
            class="flex items-center gap-3 px-4 py-2 rounded hover:bg-gray-700 transition"
          >
            <span class="menu-text">Approval Akun</span>
          </a>
          <a
            href="/auth/admin/magang"
            class="flex items-center gap-3 px-4 py-2 rounded hover:bg-gray-700 transition"
          >
            <span class="menu-text">Approval Magang</span>
          </a>
        </div>
      </nav>
    </aside>

    <div class="flex-1 flex flex-col overflow-hidden">
      <header
        class="bg-gray-50 shadow-md px-6 py-4 flex justify-between items-center border-b border-gray-200"
      >
        <h1 class="text-2xl font-semibold text-gray-700">Approval Akun</h1>
        <form action="/auth/logout" method="POST" class="ml-4">
          <button
            class="bg-red-600 text-white px-5 py-2 rounded-lg hover:bg-red-700 transition duration-200"
          >
            Logout
          </button>
        </form>
      </header>

      <main class="flex-1 overflow-x-hidden overflow-y-auto bg-gray-100 p-6">
        <h2 class="text-2xl font-semibold mb-5 text-gray-800">
          User Menunggu Persetujuan
        </h2>

        <% if (pendingUsers.length === 0) { %>
        <div class="bg-white p-6 rounded-lg shadow-md text-center">
          <p class="text-gray-600 text-lg">
            Tidak ada user yang menunggu approval.
          </p>
        </div>
        <% } else { %>
        <ul class="space-y-4">
          <% pendingUsers.forEach(user => { %>
          <li
            class="bg-white p-5 rounded-lg shadow-md flex justify-between items-center transition duration-200 hover:shadow-lg"
          >
            <div>
              <p class="font-semibold text-lg text-gray-800">
                <%= user.username %>
              </p>
              <p class="text-sm text-gray-500">Email: <%= user.email %></p>
              <p class="text-sm text-gray-500">
                No HP: <%= user.phone %>
              </p>
              <p class="text-sm text-gray-500">
                Tanggal Lahir: <%= user.dob %>
              </p>
            </div>

            <div class="flex gap-3">
              <form action="/auth/admin/approve/<%= user.id %>" method="POST">
                <button
                  class="bg-green-500 text-white px-5 py-2 rounded-lg hover:bg-green-600 transition duration-200 transform hover:scale-105"
                >
                  Approve
                </button>
              </form>
              <form action="/auth/admin/reject/<%= user.id %>" method="POST">
                <button
                  class="bg-red-500 text-white px-5 py-2 rounded-lg hover:bg-red-600 transition duration-200 transform hover:scale-105"
                >
                  Reject
                </button>
              </form>
            </div>
          </li>
          <% }) %>
        </ul>
        <% } %>
      </main>
    </div>

    <script>
      const sidebar = document.getElementById("sidebar");
      const sidebarToggle = document.getElementById("sidebarToggle");

      sidebarToggle.addEventListener("click", () => {
        sidebar.classList.toggle("w-64");
        sidebar.classList.toggle("w-20"); // Atur lebar saat ditutup
        // Sembunyikan/tampilkan teks menu saat sidebar ditutup/dibuka
        const menuItems = sidebar.querySelectorAll("a span"); // Jika ada span di dalam a untuk teks
        const menuTitles = sidebar.querySelector("h2"); // Judul "Menu Admin"
        menuTitles.classList.toggle("hidden"); // Sembunyikan/tampilkan judul

        // Untuk setiap item menu, sembunyikan atau tampilkan teksnya
        sidebar.querySelectorAll("a").forEach((item) => {
          const textNode = item.childNodes[0]; // Ambil node teks pertama
          if (textNode && textNode.nodeType === 3) {
            // Cek jika itu node teks
            const currentText = textNode.textContent.trim();
            if (sidebar.classList.contains("w-20")) {
              // Jika sidebar ditutup, sembunyikan teks
              if (currentText !== "") {
                // Hanya jika ada teks
                item.setAttribute("data-original-text", currentText); // Simpan teks asli
                textNode.textContent = "";
                item.classList.add("justify-center"); // Pusatkan ikon
              }
            } else {
              // Jika sidebar dibuka, kembalikan teks asli
              const originalText = item.getAttribute("data-original-text");
              if (originalText) {
                textNode.textContent = originalText;
                item.removeAttribute("data-original-text");
                item.classList.remove("justify-center");
              }
            }
          }
        });
      });

      // Inisialisasi: Sembunyikan teks menu saat pertama kali sidebar ditutup (jika defaultnya tertutup)
      // Atau bisa juga menambahkan ikon untuk setiap menu item jika ingin sidebar terlihat lebih baik saat tertutup.
    </script>
  </body>
</html>

<body class="bg-gray-100 p-10"></body>
