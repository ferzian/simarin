    <template x-for="(img, index) in images" :key="index">
      <div @click="goTo(index)"
        class="w-3 h-3 rounded-full cursor-pointer transition-colors duration-300"
        :class="current === index ? 'bg-white w-6' : 'bg-gray-400/50'">
      </div>
    </template>
  </div>
</div>

