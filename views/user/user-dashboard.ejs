<body class="bg-gray-50">

<!-- Navigation -->
<nav class="bg-white shadow-sm">
  <div class="max-w-6xl mx-auto px-4 py-3 flex justify-between items-center">
    <div class="simarin-text text-4xl text-blue-800">SIMARIN</div>
    <div class="flex space-x-8">
      <a href="#" class="program-text text-gray-700 font-medium py-2">Beranda</a>
      <a href="#" class="program-text text-gray-700 font-medium py-2">Layanan</a>
      <a href="#" class="program-text text-gray-700 font-medium py-2">Kontak</a>
      <a href="#" class="program-text text-gray-700 font-medium py-2">Logout</a>
    </div>
  </div>
</nav>

<!-- Hero Section -->
<div 
  class="text-white py-20 px-4 min-h-[90vh] flex items-center bg-cover bg-center transition-all duration-700"
  :style="`background-image: linear-gradient(rgba(30, 58, 138, 0.7), rgba(0, 0, 0, 0.3)), url('${images[current]}')`"
>
