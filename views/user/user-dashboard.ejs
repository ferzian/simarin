<!-- Alpine Slider Script -->
<script>
function slider() {
  return {
    images: [
      'https://kkp.go.id/storage/Berita/kkp-kemhan-kolaborasi-bentuk-komcad-di-sektor-kelautan-perikanan-pZBr.jpg',
      'https://kkp.go.id/storage/foto/foto-65f117df90a2f.jpg',
      'https://images.bisnis.com/posts/2020/01/23/1193248/antara-tangkapan-nelayan-tradisional-mtb.jpg',
    ],
    current: 0,
    start() {
      setInterval(() => {
        this.current = (this.current + 1) % this.images.length;
      }, 3000);
    }
  }
}
</script>

</body>
</html>
