<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Upload Laporan Magang</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 font-sans">
  <div class="max-w-3xl mx-auto py-12 px-6">
    <h1 class="text-4xl font-bold text-center mb-8 text-gray-800">📑 Upload Laporan Magang</h1>
  
    <!-- Daftar Laporan -->
    <div id="laporan-container" class="space-y-4 mb-8">
      <% if(laporan){ %>
        <div class="p-4 bg-white shadow rounded-xl flex justify-between items-center border border-gray-200 hover:shadow-lg transition duration-300">
          <span class="font-medium text-gray-700"><%= laporan.judul %></span>
          <span class="px-3 py-1 rounded-full text-sm font-semibold <%= laporan.status==='approved'?'bg-green-200 text-green-800':'bg-yellow-200 text-yellow-800' %>">
            <%= laporan.status %>
          </span>
        </div>
      <% } else { %>
        <p class="text-gray-400 italic text-center">Belum ada laporan diupload.</p>
      <% } %>
    </div>
  
    <!-- Form Upload -->
    <form id="upload-form" class="bg-white p-6 rounded-2xl shadow-xl space-y-4 border border-gray-200" enctype="multipart/form-data">
      <input type="text" name="judul" placeholder="Judul Laporan"
        class="w-full border p-3 rounded-xl focus:ring-2 focus:ring-yellow-400 focus:border-yellow-400 transition font-medium text-gray-800" required>
  
      <div class="flex items-center space-x-4">
        <input type="file" name="laporan" id="laporan-file" class="border p-2 rounded-lg w-full" required>
        <button type="button" id="hapus-file" class="text-red-500 hover:text-red-700 transition" title="Hapus file">
          🗑️
        </button>
      </div>
  
      <div class="w-full bg-gray-200 rounded-full h-3 overflow-hidden hidden" id="progress-container">
        <div class="bg-yellow-400 h-3 w-0 transition-all" id="progress-bar"></div>
      </div>
  
      <button type="submit" class="w-full bg-yellow-500 text-white p-3 rounded-xl font-semibold hover:bg-yellow-600 shadow-md hover:shadow-lg transition">Upload Laporan</button>
    </form>
  </div>
  
  <script>
  const form = document.getElementById('upload-form');
  const fileInput = document.getElementById('laporan-file');
  const hapusBtn = document.getElementById('hapus-file');
  const progressContainer = document.getElementById('progress-container');
  const progressBar = document.getElementById('progress-bar');
  const laporanContainer = document.getElementById('laporan-container');
  const btnSertifikat = document.getElementById('btn-sertifikat');

  hapusBtn.addEventListener('click', ()=> fileInput.value = '');

  form.addEventListener('submit', e => {
    e.preventDefault();
    if(!fileInput.files[0]) return alert('Pilih file terlebih dahulu!');

    progressContainer.classList.remove('hidden');
    progressBar.style.width='0%';

    const formData = new FormData();
    formData.append('laporan', fileInput.files[0]);
    formData.append('judul', form.judul.value);

    fetch('/user/submit-laporan', {
      method:'POST',
      body: formData
    }).then(res=>res.json())
      .then(data=>{
        progressBar.style.width='100%';
        progressContainer.classList.add('hidden');
        fileInput.value = '';
        form.judul.value = '';

        // Update atau tambah laporan di UI
        laporanContainer.innerHTML = `
          <div class="p-4 bg-white shadow rounded-xl flex justify-between items-center border border-gray-200 hover:shadow-lg transition duration-300">
            <span class="font-medium text-gray-700">${data.laporan.judul}</span>
            <span class="px-3 py-1 rounded-full text-sm font-semibold ${data.laporan.status==='approved'?'bg-green-200 text-green-800':'bg-yellow-200 text-yellow-800'}">
              ${data.laporan.status}
            </span>
          </div>
        `;

        // Update card sertifikat
        if(data.laporan.status==='approved'){
          btnSertifikat.classList.remove('bg-gray-300','text-gray-600','cursor-not-allowed');
          btnSertifikat.classList.add('bg-green-500','text-white','hover:bg-green-600','cursor-pointer');
          btnSertifikat.disabled = false;
        } else {
          btnSertifikat.classList.add('bg-gray-300','text-gray-600','cursor-not-allowed');
          btnSertifikat.classList.remove('bg-green-500','text-white','hover:bg-green-600','cursor-pointer');
          btnSertifikat.disabled = true;
        }

      }).catch(err=>{
        alert('Upload gagal, coba lagi.');
        progressContainer.classList.add('hidden');
      });
  });

  // Klik sertifikat
  btnSertifikat.addEventListener('click', () => {
    if(btnSertifikat.disabled) return;
    // redirect ke endpoint download sertifikat (harus dibuat di backend)
    window.location.href = '/user/sertifikat/download';
  });
  </script>
</body>
</html>
