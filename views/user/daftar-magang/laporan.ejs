<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Upload Laporan Magang</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body class="bg-gray-100 flex items-center justify-center min-h-screen font-sans">

  <div class="bg-white p-8 rounded-2xl shadow-xl w-full max-w-md transform transition hover:scale-[1.01] duration-300">
    <h1 class="text-2xl font-bold text-center text-gray-800 mb-6">ðŸ“‘ Upload Laporan Magang</h1>
    
    <form action="/user/laporan" method="POST" enctype="multipart/form-data" id="uploadForm" class="space-y-5">
      
      <!-- Drag & Drop Zone -->
      <div id="dropZone" class="flex flex-col items-center justify-center border-2 border-dashed border-gray-300 rounded-xl p-6 bg-gray-50 cursor-pointer hover:border-blue-500 hover:bg-blue-50 transition">
        <svg class="w-12 h-12 text-gray-400 mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
            d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6h.1a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12" />
        </svg>
        <p class="text-gray-600 text-center">Seret & letakkan file di sini<br><span class="text-sm text-gray-400">atau klik untuk memilih</span></p>
        <input type="file" name="laporan" id="fileInput" accept=".pdf,.doc,.docx" class="hidden" required>
      </div>

      <!-- File Preview -->
      <p id="fileName" class="text-sm text-gray-500 text-center mt-2"></p>

      <!-- Submit Button -->
      <button type="submit"
        class="w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-3 rounded-xl transition duration-300 shadow-md hover:shadow-lg">
        Upload Laporan
      </button>
    </form>
  </div>

  <script>
    const dropZone = document.getElementById('dropZone');
    const fileInput = document.getElementById('fileInput');
    const fileName = document.getElementById('fileName');
    const form = document.getElementById('uploadForm');

    // Klik area -> trigger input file
    dropZone.addEventListener('click', () => fileInput.click());

    // Tampilkan nama file
    fileInput.addEventListener('change', () => {
      fileName.textContent = fileInput.files.length ? `ðŸ“„ ${fileInput.files[0].name}` : "";
    });

    // Drag & Drop
    dropZone.addEventListener('dragover', (e) => {
      e.preventDefault();
      dropZone.classList.add('border-blue-500', 'bg-blue-50');
    });

    dropZone.addEventListener('dragleave', () => {
      dropZone.classList.remove('border-blue-500', 'bg-blue-50');
    });

    dropZone.addEventListener('drop', (e) => {
      e.preventDefault();
      fileInput.files = e.dataTransfer.files;
      fileName.textContent = `ðŸ“„ ${fileInput.files[0].name}`;
      dropZone.classList.remove('border-blue-500', 'bg-blue-50');
    });

    // Notifikasi sukses
    form.addEventListener('submit', (e) => {
      e.preventDefault();
      Swal.fire({
        icon: 'success',
        title: 'Berhasil!',
        text: 'Laporan berhasil diupload ðŸŽ‰',
        confirmButtonColor: '#2563eb'
      }).then(() => {
        form.submit();
      });
    });
  </script>
</body>
</html>
