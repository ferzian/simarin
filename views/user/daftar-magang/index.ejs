  <!-- Main Content -->
  <div class="max-w-3xl mx-auto mt-12 rounded shadow relative">
    <div class="absolute inset-0 bg-blue-50 opacity-20 rounded-lg"></div>

    <main class="relative bg-white bg-opacity-70 p-10 rounded-lg backdrop-blur-sm">
      <div class="flex justify-between items-center relative -top-4">
        <h2 class="text-3xl font-bold">Halo, <%= username %></h2>
        <div class="bg-white-200 p-2 rounded-md w-24 md:w-32">
          <img src="/images/logo.png" alt="Logo" class="h-15 md:h-20 w-full object-contain">
        </div>
      </div>
      <p class="mb-6 text-gray-600">Silakan isi formulir untuk mendaftar magang di Balai Perikanan Budidaya Air!</p>

      <form id="formMagang" method="POST" action="/user/daftar-magang" enctype="multipart/form-data" class="space-y-6">

        <!-- Global Error Message -->
        <div id="globalError" class="bg-red-50 border-l-4 border-red-500 p-4 hidden">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-red-500" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <p class="text-sm text-red-700">Harap lengkapi semua field yang wajib diisi!</p>
            </div>
          </div>
        </div>

        <!-- Field Input -->

        <!--nama lengkap-->
        <div class="mb-6">
          <label for="Nama lengkap" class="block text-base font-semibold text-gray-700 mb-1">Nama lengkap</label>
          <input type="text" id="Nama lengkap" name="namaLengkap"
            class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:outline-none shadow-sm placeholder-gray-400 transition duration-300"
            placeholder="Masukkan Nama lengkap" required>
        </div>
<!--nis npm-->
        <div class="mb-6">
           <label for="nisNpm" class="block text-base font-semibold text-gray-700 mb-1">Nis/Npm</label>
            <input type="text" id="nisNpm" name="nisNpm"
            class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:outline-none shadow-sm placeholder-gray-400 transition duration-300"
            placeholder="Masukkan nisNpm" required>
        </div>

                <!--alamat domisili-->
           <div class="mb-6">
           <label for="Alamat Domisili" class="block text-base font-semibold text-gray-700 mb-1">Alamat Domisili</label>
            <input type="text" id="Alamat Domisili" name="alamat"
            class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:outline-none shadow-sm placeholder-gray-400 transition duration-300"
            placeholder="Masukkan Alamat Domisili" required>
             </div>

          <!-- Nomor Telepon -->
          <div class="mb-6">
            <label for="telepon" class="block text-base font-semibold text-gray-700 mb-1">Nomor Telepon</label>
            <input type="text" id="telepon" name="telepon"
              class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:outline-none shadow-sm placeholder-gray-400 transition duration-300"
              placeholder="Masukkan nomor telepon Anda" required>
          </div>


          <!--Sekolah/PT/Instansi-->
          <div class="mb-6">
            <label for="Sekolah/PT/Instansi" class="block text-base font-semibold text-gray-700 mb-1">Sekolah/PT/Instansi</label>
            <input type="text" id="Sekolah/PT/Instansi" name="institusi"
              class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:outline-none shadow-sm placeholder-gray-400 transition duration-300"
              placeholder="Masukkan program studi Anda" required>
          </div>
          

          <!-- Program Studi -->
          <div class="mb-6">
            <label for="prodi" class="block text-base font-semibold text-gray-700 mb-1">Program Studi</label>
            <input type="text" id="prodi" name="prodi"
              class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:outline-none shadow-sm placeholder-gray-400 transition duration-300"
              placeholder="Masukkan program studi Anda" required>
          </div>

          <!-- Jenjang Pendidikan -->
          <div class="mb-6">
            <label for="jenjang" class="block text-base font-semibold text-gray-700 mb-1">Jenjang Pendidikan</label>
            <select id="jenjang" name="jenjang"
              class="w-full px-4 py-3 rounded-xl border border-gray-300 bg-white focus:ring-2 focus:ring-blue-500 focus:outline-none shadow-sm transition duration-300"
              required>
              <option value="" disabled selected>-- Pilih Jenjang --</option>
              <option>Sekolah</option>
              <option>D3/D4</option>
              <option>S1</option>
              <option>S2</option>
              <option>S3</option>
            </select>
          </div>

          <!-- Jenis Kelamin -->
          <div class="mb-6">
            <label for="jenisKelamin" class="block text-base font-semibold text-gray-700 mb-1">Jenis Kelamin</label>
            <select id="jenisKelamin" name="jenisKelamin"
              class="w-full px-4 py-3 rounded-xl border border-gray-300 bg-white focus:ring-2 focus:ring-blue-500 focus:outline-none shadow-sm transition duration-300"
              required>
              <option value="" disabled selected>-- Pilih Jenis Kelamin --</option>
              <option>Laki-Laki</option>
              <option>Perempuan</option>
            </select>
          </div>

          <!-- Tanggal Mulai dan Tanggal Selesai -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="mb-6">
              <label for="tanggalMulai" class="block text-base font-semibold text-gray-700 mb-1">Tanggal Mulai</label>
              <input type="date" id="tanggalMulai" name="tanggalMulai"
                class="w-full px-4 py-3 rounded-xl border border-gray-300 bg-white focus:ring-2 focus:ring-blue-500 focus:outline-none shadow-sm transition duration-300"
                required>
            </div>
            <div class="mb-6">
              <label for="tanggalSelesai" class="block text-base font-semibold text-gray-700 mb-1">Tanggal Selesai</label>
              <input type="date" id="tanggalSelesai" name="tanggalSelesai"
                class="w-full px-4 py-3 rounded-xl border border-gray-300 bg-white focus:ring-2 focus:ring-blue-500 focus:outline-none shadow-sm transition duration-300"
                required>
            </div>
          </div>

          <!-- Kegiatan -->
          <div class="mb-6">
            <label for="kegiatan" class="block text-base font-semibold text-gray-700 mb-1">Kegiatan</label>
            <select id="kegiatan" name="kegiatan"
              class="w-full px-4 py-3 rounded-xl border border-gray-300 bg-white focus:ring-2 focus:ring-blue-500 focus:outline-none shadow-sm transition duration-300"
              required>
              <option value="" disabled selected>-- Pilih Kegiatan --</option>
              <option>Magang</option>
              <option>Praktik Kerja Lapang</option>
              <option>Penelitian</option>
              <option>MBKM</option>
            </select>
          </div>

          <!-- Lokasi Instansi -->
          <div class="mb-6">
            <label for="lokasi" class="block text-base font-semibold text-gray-700 mb-1">Lokasi Kegiatan</label>
            <select id="lokasi" name="lokasi"
              class="w-full px-4 py-3 rounded-xl border border-gray-300 bg-white focus:ring-2 focus:ring-blue-500 focus:outline-none shadow-sm transition duration-300"
              required>
              <option value="" disabled selected>-- Pilih Lokasi --</option>
              <option>Depok</option>
              <option>Sempur</option>
              <option>Cibalagung</option>
              <option>Cijeruk</option>
            </select>
          </div>

          <!-- Upload Pas Foto -->
          <div class="mb-6">
            <label for="uploadFoto" class="block text-base font-semibold text-gray-700 mb-1">Upload Pas Foto</label>
            <input
              type="file"
              id="uploadFoto"
              name="pas_foto"
              accept="image/*"
              class="w-full border border-gray-300 px-4 py-3 rounded-xl text-gray-700 bg-white file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-green-100 file:text-green-700 hover:file:bg-green-200 transition"
              required
            />
          </div>

          <!-- Upload Surat Keterangan Sehat -->
          <div class="mb-6">
            <label for="uploadSehat" class="block text-base font-semibold text-gray-700 mb-1">Upload Surat Keterangan Sehat</label>
            <input
              type="file"
              id="uploadSehat"
              name="surat_sehat"
              accept=".pdf,.jpg,.png"
              class="w-full border border-gray-300 px-4 py-3 rounded-xl text-gray-700 bg-white file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-purple-100 file:text-purple-700 hover:file:bg-purple-200 transition"
              required
            />
          </div>


      <div class="mt-6">
        <button type="submit"
          class="w-full bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-indigo-700 hover:to-purple-700 text-white font-semibold py-3 rounded-xl shadow-lg hover:shadow-xl transition duration-300 ease-in-out transform hover:-translate-y-1">
          <span class="flex items-center justify-center space-x-2">
            <svg class="w-5 h-5 animate-pulse" fill="none" stroke="currentColor" stroke-width="2"
              viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round"
                d="M5 13l4 4L19 7"></path>
            </svg>
            <span>Kirim Pendaftaran</span>
          </span>
        </button>
      </div>
        </form>
      </main>
    </div>
    <% if (success) { %>
  <script>
    Swal.fire({
      icon: 'success',
      title: 'Pendaftaran Berhasil!',
      text: 'Data kamu sudah berhasil dikirim.',
      confirmButtonText: 'OK'
    });
  </script>
<% } %>

    <script src="/js/user/alert-handler.js"></script>
  </body>
</html>
