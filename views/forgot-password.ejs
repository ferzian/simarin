<!DOCTYPE html>
<html>
  <head>
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Lupa Password</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <link rel="icon" sizes="32x32" type="image/png" href="/images/logo.png" />
    <script src="/js/home.js" defer></script>
    <style>
      body {
        font-family: "Poppins", sans-serif;
      }
    </style>
  </head>
    <body class="min-h-screen flex flex-col bg-gradient-to-br from-blue-50 to-blue-100">
    
    <!-- Navbar -->
    <nav id="navbar" class="fixed top-0 left-0 right-0 bg-transparent px-6 py-4 flex justify-between items-center z-50 transition duration-300">
      <div class="flex items-center space-x-3">
        <img src="/images/logo.png" alt="Logo SIMARIN" class="h-10 w-10 object-contain" />
        <h1 id="navTitle" class="text-2xl md:text-3xl font-bold text-white tracking-wide">SIMARIN</h1>
      </div>
      <div class="flex items-center space-x-6 font-medium">
        <a href="/" class="nav-link text-white hover:text-blue-400 transition">Beranda</a>
        <a href="/register" class="nav-link text-white hover:text-blue-400 transition">Daftar</a>
        <a href="/login" class="px-5 py-2 rounded-full bg-gradient-to-r from-blue-600 to-blue-500 text-white shadow hover:opacity-90 transition">Login</a>
      </div>
    </nav>

    <!-- Background Hero -->
    <header class="relative flex-grow flex items-center justify-center text-center bg-cover bg-center"
      style="background-image: url('/images/BRPBATPP_Depan%5B1%5D.jpg');">
      <div class="absolute inset-0 bg-black/40"></div>

      
    <div class="relative z-10 w-full max-w-md bg-white/80 backdrop-blur-sm p-10 rounded-2xl shadow-2xl">
        <h1 class="text-3xl font-bold text-center text-gray-800">
          Lupa Password Anda? ðŸ¤”
        </h1>
        <p class="text-center text-gray-600 text-lg">
          Masukkan email Anda untuk menerima tautan reset password.
        </p>

        <% if (error) { %>
        <div
          class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4"
        >
          <strong><%= error %></strong>
        </div>
        <% } %> <% if (success) { %>
        <div
          class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4"
        >
          <strong><%= success %></strong>
        </div>
        <% } %>

        <form action="/auth/forgot-password" method="POST" class="space-y-6">
          <div>
            <label
              for="email"
              class="block text-gray-700 font-medium mb-2 text-lg"
              >Email Anda <span class="text-red-500">*</span></label
            >
            <input
              type="email"
              name="email"
              id="email"
              placeholder="Masukkan email Anda"
              class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200 text-lg"
              required
            />
          </div>
          <button
            type="submit"
            class="bg-blue-600 text-white w-full py-3 rounded-lg shadow-md hover:bg-blue-700 transition duration-300 ease-in-out font-semibold text-xl transform hover:scale-100"
          >
            Kirim Tautan Reset
          </button>
        </form>

        <p class="text-center text-sm mt-4">
          <a href="/login" class="text-blue-500 hover:underline"
            >Kembali ke halaman Login</a
          >
        </p>
      </div>
  </body>
</html>
